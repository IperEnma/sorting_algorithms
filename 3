#include "sort.h"
/**
 *
 *
 */
void quick_sort_suplement(int *array, size_t first, size_t last, size_t len)
{
    size_t left = 0, right = 0;
    int pivot = 0;

    if (first < last)
    {
        pivot = array[first];

        left = first;
        right = last;

        printf("left: %ld\n", left);
        printf("right: %ld\n", right);
        printf("pivot: %d\n", pivot);
        printf("first: %ld\n", first);
        printf("last: %ld\n", last);
        printf("len: %ld\n", len);
        printf("********\n");
        while(left < right)
        {
            while(right > left && array[right] > pivot)
                right--;
            if (right > left)
            {
                array[left] = array[right];
                left++;
            }

            while (left < right && array[left] < pivot)
                left++;
            if (left < right)
            {
                array[right] = array[left];
                right--;
            }
        }
        array[right] = pivot;
        quick_sort_suplement(array, first, right - 1, len);
        quick_sort_suplement(array, right + 1, last, len);
    }


}
/**
 *
 *
 */
void quick_sort(int *array, size_t size)
{
    quick_sort_suplement(array, 0, size - 1, size);
}
